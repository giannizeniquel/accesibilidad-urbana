<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <title>AccesAR</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="img/Logo_recortado.png" rel="icon">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.4/css/jquery.dataTables.css">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500&family=Jost:wght@500;600;700&display=swap" rel="stylesheet"> 

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="lib/animate/animate.min.css" rel="stylesheet">
    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="css/style.css" rel="stylesheet">
    <style>
        a{
            text-decoration: none;
            color:#fff;
            position: relative;
            margin-right: 25px;
            padding: 45px 0;
            font-family: 'Jost', sans-serif;
            font-size: 18px;
            font-weight: 500;
            color: var(--light) !important;
            outline: none;
            transition: .5s;
        }
        ul{
            list-style: none;
        }
        .item {
            display:inline-block;
            padding-left:3px;
            padding-right:3px;
        }
        .listaSector{
            display:none;
        }
        .navbar-light .navbar-brand img {
            max-height: 50px !important;
            transition: .5s;
        }
    </style>
</head>

<body data-bs-spy="scroll" data-bs-target=".navbar" data-bs-offset="51">
    <div class="container-xxl bg-white p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-grow text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Cargando...</span>
            </div>
        </div>
        <!-- Spinner End -->


        <!-- Navbar & Hero Start -->
        <div class="container-xxl position-relative p-0" id="home">
            <nav class="navbar navbar-expand-lg navbar-light px-4 px-lg-5 py-3 py-lg-0">
                <a href="" class="navbar-brand p-0">
                    <img src="img/Logo_recortado.png" alt="Logo">
                </a>
                <a href="" class="navbar-brand p-0">
                    <h1 class="m-0">AccesAR</h1>
                </a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="fa fa-bars"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav mx-auto py-0">
                        <ul>
                            <li class = "item" >
                                <a href="{{path('app_index')}}" class="nav-item active">Lista</a>
                            </li>
                            <li class = "item" >
                                <a href="#contact" class="nav-item">Reportar</a>
                            </li>
                            <li class = "item">
                                <select class="form-control" id="incidente" placeholder="Incidente" style="margin-top:5%; background-color: #A152FF; color: #ffff">
                                    <option value="">Sectores</option>
                                    <option value="1">Centro</option>
                                    <option value="2">Marco Centro</option>
                                    <option value="3">Zona Norte</option>
                                    <option value="4">Zona Sur</option>
                                    <option value="5">Zona Este</option>
                                    <option value="6">Zona Oeste</option>
                                </select>
                            </li>
                        </ul>
                    </div>
                    <a href="#nosotros" class="btn btn-primary-gradient rounded-pill py-2 px-4 ms-3 d-none d-lg-block">Sobre Nosotros</a>
                </div>
            </nav>
        </div>
        <div class="container-xxl bg-primary hero-header">
                <div class="container px-lg-5">
                    <div class="row g-5">
                        <div class="col-lg-12 text-center text-lg-start">
                            <div class="form-group">
                                <div class="form-widget">
                                    <input class="form-control" type="search" name="query" placeholder="Ingrese Calle">
                                    <button id ="search" class="btn btn-primary">Buscar Calle</button>
                                </div>
						    </div>
                        </div>
                    </div>
                </div>
                <br>
                <br>
                <br>
                <br>
                <div class="container px-lg-5">
                    <div class="row g-5">
                        <div class="col-lg-8 text-center text-lg-start">
                            <table class="table table-dark">
                                <thead>
                                    <tr>
                                        <th scope="col">Sector</th>
                                        <th scope="col">Calle</th>
                                        <th scope="col">Altura</th>
                                        <th scope="col">Incidencia</th>
                                        <th scope="col">Temparalidad</th>
                                        <th scope="col">Motivo</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for incidente in incidencias %}
                                            <tr>
                                    <td style="text-align: center;">{{incidente.getSector()}}</td>
                                    <td style="text-align: center;">{{incidente.calles}}</td>
                                    <td style="text-align: center;">{{incidente.altura}}</td>
                                    <td style="text-align: center;">{{incidente.incidencia}}</td>
                                    <td style="text-align: center;">{{incidente.getStringTemporalidad()}}</td>
                                    <td style="text-align: center;">{{incidente.getStringMotivo()}}</td>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <div class="col-lg-4 d-flex justify-content-center justify-content-lg-end wow fadeInUp" data-wow-delay="0.3s">
                            <div class="owl-carousel screenshot-carousel">
                                <img class="img-fluid" src="img/screenshot-1.png" alt="">
                                <img class="img-fluid" src="img/screenshot-2.png" alt="">
                                <img class="img-fluid" src="img/screenshot-3.png" alt="">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <!-- Navbar & Hero End -->


        <!-- About Start -->
        


        <!-- INFORMAR INCIDENTES -->
        <div class="container-xxl py-5" id="contact">
            <div class="container py-5 px-lg-5">
                <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                    <h1 class="mb-5">Reportar Incidente</h1>
                </div>
                <div class="row justify-content-center">
                    <div class="col-lg-9">
                        <div class="wow fadeInUp" data-wow-delay="0.3s">
                            <form id="aprobarPorLista" name="aprobarPorLista" action="{{ path('recibirReclamo') }}" method="POST">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="number" class="form-control" id="dni" placeholder="DNI" name='dni' required>
                                            <label for="name">DNI:</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="text" class="form-control" id="nombre" placeholder="Nombre" readonly required>
                                            <label for="name">Nombre:</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <select class="form-control" id="calle" placeholder="Calle:" required name="incidente[calle]">
                                                <option value="">Seleccione calle</option>
                                            </select>
                                            <label for="name">Calle:</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="number" class="form-control" id="calleAltura" placeholder="Altura" required name="incidente[altura]">
                                            <label for="calle numero">Altura:</label>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-floating">
                                            <select class="form-control" id="incidente" placeholder="Incidente" required name="incidente[motivo]">
                                                <option value="">Seleccione incidente</option>
                                                <option value="1">Bacheo</option>
                                                <option value="2">Protesta</option>
                                                <option value="3">Inundaciones</option>
                                                <option value="4">Accidente de Trafico</option>
                                                <option value="5">Obra Pública</option>
                                                <option value="6">Otro</option>
                                            </select>
                                            <label for="subject">incidente</label>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-floating">
                                            <select class="form-control" id="incidente" placeholder="Incidente" required name="incidente[tiempo]">
                                                <option value="">Tiempo estimado</option>
                                                <option value="1">Temporal (horas)</option>
                                                <option value="2">Semi Temporal (dias)</option>
                                                <option value="3">Permanente (indefinido)</option>
                                            </select>
                                            <label for="subject">Tiempo estimado</label>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-floating">
                                            <textarea class="form-control" placeholder="Leave a message here" id="message" style="height: 150px"></textarea>
                                            <label for="message">Observaciones (opcional)</label>
                                        </div>
                                    </div>
                                    <div class="col-12 text-center">
                                        <button class="btn btn-primary-gradient rounded-pill py-3 px-5" type="submit">Informar</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Footer Start -->
        <div class="container-fluid bg-primary text-light footer wow fadeIn" data-wow-delay="0.1s">
            <div class="container py-5 px-lg-5">
                <div class="row g-5">
                    <div class="col-md-6 col-lg-3">
                        
                    </div>
                </div>
            </div>
            <div class="container px-lg-5">
                <div class="copyright">
                    <a id="nosotros">
                    <div class="row">
                        <h1>Padawans Inc.</h1>
                    </div>
                    </a>
                </div>
            </div>
        </div>
        <!-- Footer End -->


        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-lg-square back-to-top pt-2"><i class="bi bi-arrow-up text-white"></i></a>
    </div>

    <!-- JavaScript Libraries -->

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="lib/wow/wow.min.js"></script>
    <script src="lib/easing/easing.min.js"></script>
    <script src="lib/waypoints/waypoints.min.js"></script>
    <script src="lib/counterup/counterup.min.js"></script>
    <script src="lib/owlcarousel/owl.carousel.min.js"></script>
    <!-- Template Javascript -->
    <script src="js/main.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.4/js/jquery.dataTables.js"></script>
    <script>   
        $.post( "{{path('calles')}}")
        .done(function( data ) {
            calle = document.getElementById("calle");
            for (let i=0 ; i<data.length ; i++) {
                option = document.createElement("option");
                option.value = data[i]['id'];
                option.innerText = data[i]['nombre'];
                calle.appendChild(option);
            }
        });
        $(document).ready(function() {
            $('.tabla-custom').DataTable({
                "lengthMenu": [[-1, 10, 25, 50], ["Todos", 10, 25, 50]],
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.11.4/i18n/es_es.json"
                }
            });
        });
        var url="/sector";
        //configuracion para biblioteca datatable
        incidente = document.getElementById("incidente");
        incidente.addEventListener("change", function (){
            a = document.createElement("a");
            a.href = "https://127.0.0.1:8000/sector/"+incidente.value;
            a.click();
        });
        $(document).ready(function() {
                $('#calle').select2({
                    theme: 'bootstrap'
                });
                spam = document.getElementsByClassName("select2-container--bootstrap");
                spam[0].classList.add("form-control");
            });
            </script>
</body>

</html>